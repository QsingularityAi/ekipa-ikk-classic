# Production environment configuration
# Requirements: 4.1, 5.1 - Production environment settings with security

NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=${DB_HOST}
DB_PORT=5432
DB_NAME=app_engagement_intelligence
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_SSL=true
DB_CONNECTION_TIMEOUT=30000
DB_MAX_CONNECTIONS=50

# Redis Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DATABASE=0
REDIS_KEY_PREFIX=aei:prod:
REDIS_TTL=3600

# Security Configuration (MUST be set via environment variables)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=24h
ENCRYPTION_KEY=${ENCRYPTION_KEY}
HASH_SALT=${HASH_SALT}

# CORS Configuration
CORS_ORIGINS=${CORS_ORIGINS}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Compliance Configuration
GDPR_ENABLED=true
GDNG_ENABLED=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555
CONSENT_VERSION=1.0
PRIVACY_POLICY_URL=https://ikk-classic.de/privacy
DPA_URL=https://ikk-classic.de/dpa

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_LOGGING=true
LOG_LEVEL=warn
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health
ALERTING_WEBHOOK_URL=${ALERTING_WEBHOOK_URL}

# External Services (MUST be set via environment variables)
PUSH_NOTIFICATION_API_KEY=${PUSH_NOTIFICATION_API_KEY}
PUSH_NOTIFICATION_ENDPOINT=https://fcm.googleapis.com/fcm/send
PUSH_NOTIFICATION_RETRY_ATTEMPTS=3

EMAIL_SERVICE_API_KEY=${EMAIL_SERVICE_API_KEY}
EMAIL_SERVICE_ENDPOINT=https://api.sendgrid.com/v3/mail/send
EMAIL_FROM=noreply@ikk-classic.de
EMAIL_RETRY_ATTEMPTS=3

SMS_SERVICE_API_KEY=${SMS_SERVICE_API_KEY}
SMS_SERVICE_ENDPOINT=${SMS_SERVICE_ENDPOINT}
SMS_FROM_NUMBER=${SMS_FROM_NUMBER}
SMS_RETRY_ATTEMPTS=3

# Analytics Service
ANALYTICS_SERVICE_ENDPOINT=${ANALYTICS_SERVICE_ENDPOINT}
ANALYTICS_SERVICE_API_KEY=${ANALYTICS_SERVICE_API_KEY}
ANALYTICS_BATCH_SIZE=1000