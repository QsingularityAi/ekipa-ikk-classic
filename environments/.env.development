# Development environment configuration
# Requirements: 4.1 - Development environment settings

NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=app_engagement_intelligence_dev
DB_USERNAME=postgres
DB_PASSWORD=password
DB_SSL=false
DB_CONNECTION_TIMEOUT=30000
DB_MAX_CONNECTIONS=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_KEY_PREFIX=aei:dev:
REDIS_TTL=3600

# Security Configuration (Development only - change in production)
JWT_SECRET=development-jwt-secret-key-change-in-production
JWT_EXPIRATION=24h
ENCRYPTION_KEY=development-encryption-key-32-chars
HASH_SALT=development-hash-salt

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Compliance Configuration
GDPR_ENABLED=true
GDNG_ENABLED=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555
CONSENT_VERSION=1.0
PRIVACY_POLICY_URL=https://ikk-classic.de/privacy
DPA_URL=https://ikk-classic.de/dpa

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_LOGGING=true
LOG_LEVEL=debug
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# External Services (Development/Mock)
PUSH_NOTIFICATION_API_KEY=dev-push-key
PUSH_NOTIFICATION_ENDPOINT=https://fcm.googleapis.com/fcm/send
PUSH_NOTIFICATION_RETRY_ATTEMPTS=3

EMAIL_SERVICE_API_KEY=dev-email-key
EMAIL_SERVICE_ENDPOINT=https://api.sendgrid.com/v3/mail/send
EMAIL_FROM=dev@ikk-classic.de
EMAIL_RETRY_ATTEMPTS=3

SMS_SERVICE_API_KEY=dev-sms-key
SMS_SERVICE_ENDPOINT=https://api.twilio.com/2010-04-01/Accounts/test/Messages.json
SMS_FROM_NUMBER=+1234567890
SMS_RETRY_ATTEMPTS=3

# Optional Analytics Service
# ANALYTICS_SERVICE_ENDPOINT=http://localhost:8080/analytics
# ANALYTICS_SERVICE_API_KEY=dev-analytics-key
# ANALYTICS_BATCH_SIZE=100